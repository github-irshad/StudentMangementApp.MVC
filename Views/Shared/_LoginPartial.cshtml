<ul class="navbar-nav">
    @if(User.Identity.IsAuthenticated){
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Profile" asp-controller="Account">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Logout" asp-controller="Account">LogOut</a>
        </li>

    }
    else{
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>